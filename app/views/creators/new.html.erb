<h1>クリエイター登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@creator) do |f| %>
      <%= render 'shared/form_error', errors: @creator.errors  %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
     ペンネームは空白でも可
     <br/>
      <%= f.label :pen_name %>
      <%= f.text_field :pen_name, class: 'form-control' %>
      <%= f.submit "クリエイター登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

